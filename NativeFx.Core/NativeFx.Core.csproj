<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Platforms>AnyCPU;x64</Platforms>
    <VersionPrefix>0.1.0</VersionPrefix>
    <VersionSuffix>alpha</VersionSuffix>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>NativeFx.Core</Title>
    <Authors>WithLithum</Authors>
    <Product>NativeFx</Product>
    <Description>NativeFx shared code module</Description>
    <Copyright>(C) 2022 WithLithum.</Copyright>
    <PackageIcon>NativeFx_128x.png</PackageIcon>
    <RootNamespace>NativeFx</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NativeFx.Interop" Version="0.1.3" />
    <PackageReference Include="ScriptHookVDotNet3" Version="3.5.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NativeFx_128x.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
